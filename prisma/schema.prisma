generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  schemas  = ["public"]
}

model accounts {
  id              String        @id @db.Uuid
  firstName       String        @default("john")
  lastName        String        @default("smith")
  majors          String[]
  minors          String[]
  type            type?
  schoolEmail     String?
  personalEmail   String?
  gradSemester    gradSemester?
  headshotBlobURL String?       @unique
  resumeBlobURL   String?       @unique
  leaderType      leaderType?   @default(N_A)
  phoneNum        String?
  isNew           Boolean?
  gradYear        Int?
  pledgeClass     String?       @default("n/a")
  hometown        String?
  linkedin        String?       @unique
  github          String?       @unique
  applications    applications?

  @@schema("public")
}

model applications {
  id             String            @id @default(uuid()) @db.Uuid
  fullName       String
  email          String
  classification String?
  major          String?
  minor          String?
  resumeUrl      String?
  createdAt      DateTime?         @default(now()) @db.Timestamptz(6)
  eventsAttended String[]          @default([])
  reason         String?
  isFlagged      Boolean?
  lastModified   DateTime          @updatedAt @db.Timestamptz(6)
  submittedAt    DateTime?         @db.Timestamptz(6)
  userId         String            @unique @db.Uuid
  gpa            Float?
  status         applicationStatus @default(UNDER_REVIEW)
  circumstance   String?
  accounts       accounts          @relation(fields: [userId], references: [id], onDelete: Cascade, map: "userCheck")
  comments       comment[]

  @@schema("public")
}

model comment {
  id             String             @id @default(uuid()) @db.Uuid
  applicationId  String             @db.Uuid
  createdAt      DateTime           @default(now()) @db.Timestamptz(6)
  statusOverride applicationStatus?
  commenter      String?
  body           String?
  application    applications       @relation(fields: [applicationId], references: [id], onDelete: Cascade)

  @@index([applicationId])
  @@schema("public")
}

enum applicationStatus {
  CLOSED
  UNDER_REVIEW
  INTERVIEW
  WAITLIST
  BID_OFFERED
  BID_DECLINED
  BID_ACCEPTED

  @@schema("public")
}

enum leaderType {
  N_A                  @map("N/A")
  PRESIDENT
  VICE_PRESIDENT
  VP_FINANCE
  VP_PROFDEV
  VP_ENGAGEMENT
  VP_OUTREACH
  VP_MARKETING
  VP_TECHDEV
  SECRETARY
  CHAIR_INFRASTRUCTURE
  CHAIR_CONFERENCES

  @@schema("public")
}

enum type {
  APPLICANT
  PNM
  BROTHER
  LEADERSHIP
  ALUMNI

  @@schema("public")
}

enum gradSemester {
  SPRING
  FALL

  @@schema("public")
}
